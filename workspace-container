#!/usr/bin/env bash

# Deprecated wrapper script kept for compatibility.
# Use the new `wsc` command instead (same functionality, renamed).

if command -v ./wsc >/dev/null 2>&1 || command -v wsc >/dev/null 2>&1; then
    echo "'workspace-container' is deprecated â€” invoking 'wsc' instead."
    if command -v wsc >/dev/null 2>&1; then
        exec wsc "$@"
    else
        exec ./wsc "$@"
    fi
else
    echo "The CLI has been renamed to 'wsc'. Please run './wsc <command>' or install 'wsc' into your PATH."
    exit 1
fi
